<section class="home">
  <div class="area_title">
    <h3>Adding expense to <mark><%= @category.name%></mark></h3>
  </div>
  <div class="category_link">
    <form action='/transfers' method="POST">
      <label for="l_amount">Amount:</label>
      <input type="number" step="any" id="l_amount" name="amount"/>

      <!-- <label for="l_category">Last Name:</label> -->
      <input type="hidden" id="l_category" name="category_id" value="<%= @category.id %>"/>
      <input type="hidden" id="l_user_id" name="user_id" value="<%= @user.id %>"/>
      <input type="submit" value="Submit">
      <!-- <input type="image" src="/icons/save.png"> -->
    </form>
  </div>
</section>
