<h2>List categories</h2>

<% @all_master_cat.each do |master_category|%>
  <h3><%= master_category.name%></h3> £ <%= @user.total_master_category(master_category.id) %>
  <% master_category.sub_categories().each do |category| %>
    <%=category.name()%> £ <%= @user.total_category(category.id)%>
    <a href="/categories/<%= category.id %>">Details</a>
  <%end%>
<hr>
<%end%>
